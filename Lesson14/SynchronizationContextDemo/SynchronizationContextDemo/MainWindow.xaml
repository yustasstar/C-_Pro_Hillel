<Window x:Class="SynchronizationContextDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SynchronizationContextDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Start with SynchronizationContext" Click="StartWithSyncButton_Click"/>
            <Button Content="Start with Dispatch" Click="StartWithDispatchButton_Click"/>
            <Button Content="Start without SynchronizationContext or Dispatch" Click="StartWithoutSyncOrDispatchButton_Click"/>
            <Label x:Name="ResultLabel" Content="Result:" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
