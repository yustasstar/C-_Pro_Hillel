@{
    Layout = null;
}

@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>Авторизация</title>
</head>
<body>
    <div>
        Здравствуйте, @Context.Session.GetString("login")
    </div>
