@using ManyToManyExample1.Models
@model ManyToManyExample1.Models.Language

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование языка</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Язык</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label"><b>Название</b></div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
        </div>

        <div class="editor-label"><b>Континенты</b></div>
        @{
            List<Continent> continents = ViewBag.Continents;
            foreach (Continent c in continents)
            {
                <input type="checkbox" name="selectedContinents" value="@c.Id"
                       @(Model.Continents.Contains(c) ? "checked=\"checked\"" : "") />@c.Name <br />
            }
         }
        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к списку языков", "Index")
</div>

