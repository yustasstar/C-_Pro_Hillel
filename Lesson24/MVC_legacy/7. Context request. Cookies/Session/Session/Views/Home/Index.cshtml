@using System.Text;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
        @{
            // Преобразуем заданную строку, представляющую двоичные данные в виде
            // цифр в кодировке Base64, в эквивалентный массив 8-разрядных целых чисел без знака.
            byte[] def = Convert.FromBase64String(Request.Cookies["login"].Value);
            string login = Encoding.Default.GetString(def);
            <div class="col-md-offset-2 col-md-10">
                Здравствуйте, @login
            </div>
        }                          
    @using (Html.BeginForm("Logout", "Home", FormMethod.Get))
    {
        <div class="form-actions no-color">
            <input type="submit" value="Выйти" class="btn btn-default" />
        </div>
    }
    <div class="form-actions no-color">
        @Html.ActionLink("На страницу авторизации", "Create", "Login")
    </div>
</body>
</html>
