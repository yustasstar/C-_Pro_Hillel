@{
    Layout = null;
}

<html>
<head>
    <title>jqGrid</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryUI")
    <link href="~/Content/themes/base/all.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery.jqGrid.min.js" type="text/javascript"></script>
    <script src="~/Scripts/i18n/grid.locale-en.js" type="text/javascript"></script>
    <style>
        .ui-jqgrid .ui-pg-input {
            height: 20px;
        }
    </style>
</head>
<body>
    <h2>jQGrid</h2>
    <table id="jqg"></table>
    <div id="jpager"></div>
    <script type="text/javascript">
$(document).ready(function () {
    $("#jqg").jqGrid({
        url: '@Url.Action("GetData")',
        datatype: "json",
        colNames: ['Id', 'Название', 'Город', 'Страна', 'Год основания'],
        colModel: [
        { name: 'Id', index: 'Id', width: 30, sortable: false },
        { name: 'Name', index: 'Name', width: 150, sortable: true },
        { name: 'City', index: 'City', width: 150, sortable: true },
        { name: 'Country', index: 'Country', width: 100, sortable:true },
        { name: 'FoundationYear', index: 'FoundationYear', width: 80, align: "right", sortable: true }
        ],
        rowNum: 4, // число отображаемых строк
        rowList: [4, 8, 12],
        pager: '#jpager',
        loadonce:true, // загрузка только один раз
        sortname: 'FoundationYear', // сортировка по умолчанию по столбцу FoundationYear
        sortorder: "asc", // порядок сортировки
        caption: "Список клубов"
    });
});
    </script>
</body>
</html>