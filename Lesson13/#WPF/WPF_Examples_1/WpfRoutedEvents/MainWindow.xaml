<Window x:Class="WpfRoutedEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvents"
        mc:Ignorable="d"
            Title="MainWindow" Height="350" Width="525" Background="Black"
    PreviewMouseDown="WindowPreviewMouseDown" MouseDown="WindowMouseDown">
    <Grid Margin="20" Background="Green"
    PreviewMouseDown="GridPreviewMouseDown" MouseDown="GridMouseDown">
        <StackPanel Margin="30" Background="Blue"
        PreviewMouseDown="SPPreviewMouseDown" MouseDown="StackPanelMouseDown">
            <TextBox Margin="30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" Height="150" x:Name="textBox"></TextBox>
        </StackPanel>
    </Grid>
</Window>
