@model List<CartItem>

@{
	ViewData["Title"] = "Place order";
}

<h1 class="center">Place order</h1>

<hr />
<div class="container">
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th scope="col">Product Name</th>
				<th scope="col">price</th>
				<th scope="col">quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Product.Name</td>
					<td>@item.Product.Price.ToString("C0")</td>
					<td>@item.Quantity</td>
				</tr>
			}

		</tbody>
	</table>
	<div class="card">
		<h5 class="card-header">Total</h5>
		<div class="card-body">
			<h5 class="card-title">@ViewBag.total.ToString("C1")</h5>
			<a asp-action="PlaceOrderConfirmed" class="btn btn-success width-200-px">Confirm</a>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
